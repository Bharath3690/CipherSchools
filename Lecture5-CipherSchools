/* simple selector */
/* p{
    text-align: center;
} */
/* #myself{
    text-align: center;
} */
.intropara{
    text-decoration: dashed;
    text-align: center;
    color: chartreuse;
}
p,#myself,h1{
    text-align: center;
    color: aqua ;
}
/* combiantor selector */
/* for combinator slector
1.descended selector
2.child selector
3.adjacent sibling
4.general sibiling */
/* div p {
    background-color:red;
}
div > p {
    background-color:cyan;
} */
div + p{
    background-color: cornflowerblue;
}
/* above is adjacent sibiling selector*/

div ~p:hover{
    background-color: coral;
}

/* pseudo element selector */
div ~ p::first-letter{
    color: rebeccapurple;
}

a[target]{
    background-color: cyan;
}
